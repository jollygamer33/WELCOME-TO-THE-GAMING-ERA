document.addEventListener('DOMContentLoaded', () => {
    const signupForm = document.getElementById('signupForm');
    
    signupForm.addEventListener('submit', (event) => {
        // Prevent the form from submitting immediately
        event.preventDefault(); 
        
        // Get the values from the input fields
        const username = document.getElementById('username').value;
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;

        // Simple validation checks with gaming-themed messages
        if (!username || !email || !password) {
            alert('Mission failed! All fields must be filled to proceed.');
            return;
        }

        if (password.length < 6) {
            alert('Your password is too weak. Choose a password with at least 6 characters.');
            return;
        }

        if (!validateEmail(email)) {
            alert('Invalid data packet! The email address format is incorrect.');
            return;
        }

        // If validation passes, you would typically send the data to a server
        // This is where you would add your backend logic (e.g., using fetch API)
        alert('Welcome to the guild, ' + username + '! Your account has been created.');
        
        // Uncomment the line below to actually submit the form to a server
        // signupForm.submit(); 
    });

    // Helper function to validate email format
    function validateEmail(email) {
        const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return re.test(String(email).toLowerCase());
    }
});
